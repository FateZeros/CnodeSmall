/**index.wxss**/
.question {
  width: 100%;
  border-bottom: 2rpx silver solid;
  position: relative;
}

.q-title {
  width: 100%;
  height: 70rpx;
  line-height: 80rpx;
  overflow: hidden;
  font-size: 14px;
  text-overflow:ellipsis;
  white-space: nowrap;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.q-info {
  width: 100%;
  height: 140rpx;
  padding: 20rpx 40rpx;
  display: flex;
  box-sizing: border-box;
}

.q-author {
  width: 80rpx;
  height: 80rpx;
}

.author-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.author-info {
  height: 100%;
  flex: 1;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
   margin-left: 18rpx; 
}

.q-tag {
  display: inline-block;
  padding: 0 10rpx;
  height: 48rpx;
  line-height: 44rpx;
  font-size: 12px;
  border-radius: 8rpx;
  box-sizing: border-box;
  border: 1rpx solid transparent;
  white-space: nowrap;
  background-color: rgba(18,206,102,.1);
  border-color: rgba(18,206,102,.2);
  color: #13ce66;
}

.tag-all {
  background-color: #e4e8f1;
  border-color: #e4e8f1;
  color: #48576a;
}

.tag-essence {
  background-color: rgba(32,160,255,.1);
  border-color: rgba(32,160,255,.2);
  color: #20a0ff;
}