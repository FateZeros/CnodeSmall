/* detail.wxss */
.topic-detail {
  padding-bottom: 40rpx;
  background: #f7f7f7;
}

.detail-header {
  width: 100%;
  border-top: 1rpx #eee solid;
  /* border-bottom: 1rpx #eee solid; */
}

.title {
  width: 100%;
  /* height: 80rpx; */
  line-height: 80rpx;
  /* overflow: hidden; */
  box-sizing: border-box;
  padding: 0 40rpx;
  font-size: 30rpx;
  /* text-overflow: ellipsis; */
  /* white-space: nowrap; */
  font-weight: 500;
}

.title-info {
  width: 100%;
  font-size: 24rpx;
  height: 60rpx;
  color: #838383;
  box-sizing: border-box;
  padding: 0 40rpx;
}

.info-item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.info-item::before{
  content: " â€¢ ";
}

.content {
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.q-tag {
  display: inline-block;
  padding: 0 10rpx;
  height: 48rpx;
  line-height: 44rpx;
  font-size: 12px;
  border-radius: 8rpx;
  box-sizing: border-box;
  border: 1rpx solid transparent;
  white-space: nowrap;
  background-color: rgba(129,0,127,.1);
  border-color: rgba(129,0,127,.2);
  color: #81007f;
}

.reply-foot {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  border-top: 1rpx #eee solid;
  background: #f7f7fa;
  color: #999;
}

.foot-item {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: center;
}

.foot-icon {
  width: 48rpx;
  height: 48rpx;
  margin-top: 16rpx;
  margin-right: 12rpx;
}