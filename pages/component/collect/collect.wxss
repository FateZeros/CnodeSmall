/* question.wxss */
.question {
  width: 100%;
  border-bottom: 1rpx #eee solid;
  position: relative;
}

.question:first-child {
  border-top: 1rpx #eee solid;
}

.img-arrow {
  position: absolute;
  right: 32rpx;
  top: 90rpx;
  width: 32rpx;
  height: 32rpx;
}

.q-title {
  width: 100%;
  height: 70rpx;
  line-height: 80rpx;
  overflow: hidden;
  font-size: 14px;
  text-overflow:ellipsis;
  white-space: nowrap;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.q-info {
  width: 100%;
  height: 140rpx;
  padding: 20rpx 40rpx;
  display: flex;
  box-sizing: border-box;
}

.q-author {
  width: 80rpx;
  height: 80rpx;
}

.author-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.author-info {
  height: 100%;
  flex: 1;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
   margin-left: 18rpx; 
}

.q-tag {
  display: inline-block;
  padding: 0 10rpx;
  height: 48rpx;
  line-height: 44rpx;
  font-size: 12px;
  border-radius: 8rpx;
  box-sizing: border-box;
  border: 1rpx solid transparent;
  white-space: nowrap;
  background-color: rgba(244,234,42,.1);
  border-color: rgba(244,234,42,.2);
  color: #f4ea2a;
}